<UserControl x:Class="GoJV.App.UserControls.UserControlMediaPlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoJV.App.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <MediaElement Name="mdSong" LoadedBehavior="Manual" Stretch="Fill"  MediaFailed="MediaFailedHandler" MediaOpened="mdSong_MediaOpened" />
        <TextBlock x:Name="tbName" Height="30" Width="244" Margin="0,0,10,0"></TextBlock>
        <Button Name="btnMedia" Click="btnMedia_Click" Height="30" Width="244" Margin="0,0,0,0">Charger</Button>
        <Button Name="btnSong" Click="btnSong_Click" Height="30" Width="244" Margin="10,0,0,0">Play</Button>
        <Slider Name="sldPosition" Width="244"  Margin="10,6,0,0"/>
    </StackPanel>
</UserControl>
